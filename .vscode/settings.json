{
	// Use OmniSharp (C# extension) to format Razor files and prevent Prettier from touching them
	"editor.formatOnSave": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	// Require a Prettier config so Prettier won't run unexpectedly in workspaces without it
	"prettier.requireConfig": true,

	// Only format modified ranges on save (safer when multiple formatters exist)
	"editor.formatOnSaveMode": "modifications",

	"[razor]": {
		"editor.defaultFormatter": "ms-dotnettools.csharp",
		"editor.formatOnSave": true
	},

	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

		// If Prettier is installed, prefer configuring default formatter or add a .prettierignore
		// You can create a .prettierignore file at workspace root and add: \n// **/*.cshtml\n// **/*.razor

	// If you use EditorConfig or other formatters, you can add exclusions here
	"files.exclude": {
		"**/.prettierrc": false
    },
    "[aspnetcorerazor]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    }
}